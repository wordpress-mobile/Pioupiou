<resources>

    <style name="WordPress" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Material theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/grey_lighten_30</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="WordPress.Nux" parent="WordPress">
        <item name="android:windowBackground">@color/nux_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorHint">@color/grey_lighten_10</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorButtonNormal">@color/blue_dark</item>
    </style>

    <style name="WordPress.NuxEditText" parent="WordPress.Nux">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

</resources>
